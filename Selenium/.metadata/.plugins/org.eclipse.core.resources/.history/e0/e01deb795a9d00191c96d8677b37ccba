package Locator;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.Test;

public class GetAttri {
  @Test
  public void f() {
	  String chrome = "C:\\Users\\a07208trng_b4a.04.26\\Desktop\\Selenium\\jar\\chromedriver_win32\\chromedriver.exe";
		System.setProperty("webdriver.chrome.driver", chrome);
		WebDriver drive=new ChromeDriver();
		drive.get("http://book.theautomatedtester.co.uk/chapter1");
		
		WebElement text=drive.findElement(By.id("html5div"));
		String txtcontent=text.getText();
		System.out.println("Content in txtarea"+" : "+txtcontent);
		text.clear();
		String classatt=text.getAttribute("class");
		System.out.println("Content of id:"+" : "+classatt);
		text.sendKeys("The content is written through prog:Webdriver");
  }
}
